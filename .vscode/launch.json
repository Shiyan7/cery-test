{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Dev",
        "runtimeExecutable": "npx",
        "runtimeArgs": [
          "bun",
          "run",
          "dev"
        ],
        "cwd": "${workspaceFolder}",
        "env": {
          "NODE_ENV": "development"
        },
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Check",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "check"
        ],
        "cwd": "${workspaceFolder}",
        "env": {
          "NODE_ENV": "production"
        },
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  